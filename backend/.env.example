# Backend Environment Variables (do not add secrets to source control)

# LLM API Key (e.g., Gemini / OpenAI etc.)
LLM_API_KEY=

# Optional compatibility fallback (not recommended to fill):
# GEMINI_API_KEY=

# Service configuration
PORT=5000
FRONTEND_URL=https://seu-projeto.vercel.app

# Permitir configuração da chave LLM via endpoint (apenas se necessário)
ALLOW_RUNTIME_LLM_KEY=false
SETUP_TOKEN=

# Database (Render/MySQL)
DB_HOST=mysql
DB_USER=root
DB_PASSWORD=password
DB_NAME=sistema_financeiro
DB_PORT=3306
# DSN (opcional, preferível em produção):
# MYSQL_URL=mysql://user:password@host:3306/sistema_financeiro
# DATABASE_URL=mysql://user:password@host:3306/sistema_financeiro
# SSL (se o provedor exigir, ex.: Railway/PlanetScale)
# DB_SSL=true